{
    "id": "04195a5b-1883-4f35-81fc-a4c80b0876f0",
    "name": "harish_release_extension",
    "friendlyName": "Harish Release Tools",
    "description": "A release task that can be added to a release pipeline.",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Release"
    ],
    "author": "Harish S/O Balamurugan",
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 0
    },
    "runsOn": [
        "Agent"
    ],
    "instanceNameFormat": "Release Task",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        },
        {
            "name": "extra",
            "displayName": "Extra Options",
            "isExpanded": false
        },
        {
            "name": "email",
            "displayName": "Email Options",
            "isExpanded": true
        },
        {
            "name": "preapproval",
            "displayName": "Pre-Approval",
            "isExpanded": true
        },
        {
            "name": "postapproval",
            "displayName": "Post-Approval",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "smtp_host",
            "type": "string",
            "label": "SMTP Server URL",
            "defaultValue": "",
            "required": true,
            "groupName": "email",
            "helpMarkDown": "The Smtp server to use"
        },
        {
            "name": "smtp_port",
            "type": "number",
            "label": "SMTP Port Number",
            "defaultValue": "",
            "required": true,
            "groupName": "email",
            "validation": {
                "expression": "isInRange(value, 0, 65535)",
                "message": "Please enter a valid port number."
            },
            "helpMarkDown": "The port number required by your smtp server."
        },
        {
            "name": "smtp_username",
            "type": "string",
            "label": "Email Address",
            "defaultValue": "",
            "groupName": "email",
            "validation": {
                "expression": "isEmail(value)",
                "message": "Please enter a valid email address."
            },
            "required": true,
            "helpMarkDown": "The User name to use"
        },
        {
            "name": "smtp_password",
            "type": "string",
            "label": "Password",
            "defaultValue": "$(password)",
            "groupName": "email",
            "required": true,
            "helpMarkDown": "The Password to use"
        },
        {
            "name": "pre_primary_approvers",
            "type": "identities",
            "label": "Primary Approver",
            "defaultValue": "",
            "required": false,
            "groupName": "preapproval",
            "helpMarkDown": "A user / group of users involved in this project"
        },
        {
            "name": "pre_secondary_approvers",
            "type": "identities",
            "label": "Secondary Approver",
            "defaultValue": "",
            "required": false,
            "groupName": "preapproval",
            "helpMarkDown": "A user / group of users involved in this project"
        },
        {
            "name": "pre_approval_timeout",
            "type": "number",
            "label": "Timeout duration",
            "defaultValue": "1",
            "required": false,
            "groupName": "preapproval",
            "helpMarkDown": "A number, in minutes, to indicate duration in minutes before the secondary approver is allowed to approve this release.",
            "validation": {
                "expression": "isMatch(value, '^[0-9]+$', 'IgnoreCase')",
                "message": "Please enter a valid numerical value."
            }
        },
        {
            "name": "pre_enabled",
            "type": "boolean",
            "label": "Enabled",
            "required": true,
            "defaultValue": "true",
            "groupName": "preapproval",
            "helpMarkDown": "If this is true, pre-deployment approvals will be enabled"
        },
        {
            "name": "post_primary_approvers",
            "type": "identities",
            "label": "Primary Approver",
            "defaultValue": "",
            "required": false,
            "groupName": "postapproval",
            "helpMarkDown": "A user / group of users involved in this project"
        },
        {
            "name": "post_secondary_approvers",
            "type": "identities",
            "label": "Secondary Approver",
            "defaultValue": "",
            "required": false,
            "groupName": "postapproval",
            "helpMarkDown": "A user / group of users involved in this project"
        },
        {
            "name": "post_approval_timeout",
            "type": "number",
            "label": "Timeout duration",
            "defaultValue": "1",
            "required": false,
            "groupName": "postapproval",
            "helpMarkDown": "A number, in minutes, to indicate duration in minutes before the secondary approver is allowed to approve this release.",
            "validation": {
                "expression": "isMatch(value, '^[0-9]+$', 'IgnoreCase')",
                "message": "Please enter a valid numerical value."
            }
        },
        {
            "name": "post_enabled",
            "type": "boolean",
            "label": "Enabled",
            "required": true,
            "defaultValue": "true",
            "groupName": "postapproval",
            "helpMarkDown": "If this is true, post-deployment approvals will be enabled"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}