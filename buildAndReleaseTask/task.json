{
    "id": "04195a5b-1883-4f35-81fc-a4c80b0876f0",
    "name": "harish_release_extension",
    "friendlyName": "Harish Release Tools",
    "description": "A release task that can be added to a release pipeline.",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Harish S/O Balamurugan",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 6
    },
    "instanceNameFormat": "Release Task",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        },
        {
            "name": "extra",
            "displayName": "Extra Options",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "samplestring",
            "type": "string",
            "label": "Sample String",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "A sample string"
        },
        {
            "name": "user",
            "type": "identities",
            "label": "User",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "A sample user or group name",
            "groupName": "extra"
        },
        {
            "name": "emailRecipients",
            "type": "identities",
            "label": "Notify users",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Send a manual intervention pending email to specific users (or groups). Only users with manage deployment permission can act on a manual intervention."
        },
        {
            "name": "onTimeout",
            "type": "radio",
            "label": "On timeout",
            "defaultValue": "reject",
            "required": false,
            "options": {
               "reject": "Reject",
               "resume": "Resume"
            },
            "helpMarkDown": "Reject or resume this manual intervention automatically after it is pending for the specified timeout or 60 days, whichever is earlier."
        },
        {
            "name": "instructions",
            "type": "multiLine",
            "label": "Instructions",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "These instructions will be shown to the user for resuming or rejecting the manual intervention. Based on these instructions the user will take an informed decision about this manual intervention.",
            "properties": {
                "resizable": "true",
                "rows": "10",
                "maxLength": "4000"
            }
        },
        {
            "name": "timeout_test",
            "type": "number",
            "label": "Timeout Test",
            "defaultValue": 30,
            "required": true,
            "helpMarkDown": "A sample timeout number",
            "validation": {
                "expression": "isMatch(value, '^[0-9]+$', 'IgnoreCase')",
                "message": "Please enter a number."
            }
        },
        {
            "name": "timeout_unit",
            "type": "pickList",
            "label": "Timeout duration in",
            "defaultValue": "days",
            "required": false,
            "options": {
               "days": "Days",
               "hours": "Hours",
               "minutes": "Minutes"
            },
            "helpMarkDown": "A sample timeout unit"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}